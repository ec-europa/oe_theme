{#
/**
 * @file
 * Default implementation for the gallery component.
 */
#}
{% set _items = [] %}
{% for item in items %}
  {% set _icon = null %}
  {% if item.icon %}
    {% set _icon = 'ecl-icon--' ~ item.icon %}
  {% endif %}

  {% set _items = _items|merge([{
    caption: item.caption,
    classes: item.classes ~ ' ecl-col-md-3',
    image: item.thumbnail,
    icon: _icon
  }]) %}
{% endfor %}

{% set _rows = [] %}
{% for _row in _items|batch(4, '') %}
  {% set _items = [] %}
  {% for _item in _row %}
    {% if _item %}
      {% set _items = _items|merge([_item]) %}
    {% endif %}
  {% endfor %}
  {% set _rows = _rows|merge([_items]) %}
{% endfor %}

{% include '@ecl/ec-component-gallery' with { rows: _rows } only %}
