{
    "name": "ec-europa/oe_theme",
    "description": "OpenEuropa base theme.",
    "type": "drupal-theme",
    "license": "EUPL-1.1",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "ec-europa/ecl-twig-loader": "^0.0.1"
    },
    "require-dev": {
        "cweagans/composer-patches": "~1.0",
        "ec-europa/oe-code-review": "^0.1",
        "ec-europa/oe-task-runner": "^0.3",
        "drupal-composer/drupal-scaffold": "^2.2",
        "composer/installers": "^1.2",
        "drupal/console": "^1",
        "drush/drush": "^9",
        "drupal/core": "^8.5",
        "mikey179/vfsStream": "^1.2",
        "phpunit/phpunit": "^6",
        "drupal/drupal-extension": "^3.3"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "@drupal-scaffold"
        ],
        "post-update-cmd": [
            "@drupal-scaffold"
        ],
        "npm-install": "docker run -i --rm -v $(pwd):/usr/src/app -w /usr/src/app node:9.5.0 npm install",
        "npm-build": "docker run -i --rm -v $(pwd):/usr/src/app -w /usr/src/app node:9.5.0 npm run build"
    },
    "autoload-dev": {
        "psr-0": {
            "Drupal\\Tests": "build/core/tests",
            "Drupal\\KernelTests": "build/core/tests",
            "Drupal\\FunctionalTests": "build/core/tests",
            "Drupal\\FunctionalJavascriptTests": "build/core/tests"
        },
        "psr-4": {
            "Drupal\\simpletest\\": "build/core/modules/simpletest/src",
            "Drupal\\Tests\\oe_theme\\": "tests"
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/474684": "https://www.drupal.org/files/issues/474684-151.patch",
                "https://www.drupal.org/project/drupal/issues/2943172": "https://www.drupal.org/files/issues/2943172-kernel-test-base.patch"
            }
        },
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    }
}
