{
    "name": "openeuropa/oe_theme",
    "description": "OpenEuropa base theme.",
    "type": "drupal-theme",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "drupal/core": "~8.6",
        "drupal/styleguide": "~1.0-alpha3",
        "drupal/ui_patterns": "~1.0-rc1",
        "openeuropa/ecl-twig-loader": "^0.1",
        "php": "^7.1"
    },
    "require-dev": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "~1.0",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/config_devel": "~1.2",
        "drupal/console": "^1",
        "drupal/drupal-extension": "^3.4",
        "drush/drush": "^9",
        "nikic/php-parser": "~3",
        "openeuropa/code-review": "^0.2",
        "openeuropa/oe_multilingual": "^0.1",
        "openeuropa/oe_paragraphs": "^0.2",
        "openeuropa/task-runner": "^0.6",
        "openeuropa/behat-transformation-context" : "^0.1",
        "symfony/dom-crawler": "^3",
        "webflo/drupal-core-require-dev": "~8.6"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_theme\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_theme\\": "tests"
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "../oe_theme_build/core": ["type:drupal-core"],
            "../oe_theme_build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "../oe_theme_build/modules/contrib/{$name}": ["type:drupal-module"],
            "../oe_theme_build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.9"
        }
    }
}
